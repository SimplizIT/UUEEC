<div id="createobligationmodal" class='calendarModal modal fade in' data-keyboard="false" data-backdrop="static" tabindex="-1" style="display: none;">

  <div>
    <h3 class="divinline">Volunteer</h3>
    <%= link_to 'Close', '#createobligationmodal', class: 'divinline btn btn-primary btn-sm btn-modal-close' %>
  </div>

 <%= form_for(@obligation) do |f| %>
    <div class="modalHeader">
      <%= f.label :title, 'Name' %><br />
      <%= current_user.first_name.humanize + ' ' + current_user.last_name.humanize %>
      <%= f.hidden_field :title, {value: current_user.first_name + ' ' + current_user.last_name } %>
    </div>

    <div class='divinline'>
      <%= f.label :start %><br>
      <div class='input-append date start_date' data-date-format="dd-mm-yyyy H:ii p">
        <%= f.text_field :start, readonly: true, class: 'divinline', maxlength: '30', placeholder: 'Begin' %>
        <div class='divinline input-button'>
          <span class="add-on"><i class="icon-th fa fa-calendar"></i></span>
        </div>
        <div class='divinline input-button'>
          <span class="add-on"><i class="icon-remove fa fa-times-circle-o"></i></span>
        </div>
      </div>
    </div>

    <div class='divinline'>
      <%= f.label :end %><br>
      <div class='input-append date end_date' data-date-format="dd-mm-yyyy H:ii p">
        <%= f.text_field :end, readonly: true, class: 'divinline', maxlength: '30', placeholder: 'End' %>
        <div class='divinline input-button'>
          <span class="add-on"><i class="icon-th fa fa-calendar"></i></span>
        </div>
        <div class='divinline input-button'>
          <span class="add-on"><i class="icon-remove fa fa-times-circle-o"></i></span>
        </div>
      </div>
    </div>
 
    <div>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
    <div class="modalSubmitBtn">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <!-- <div id='createobligationbody' class="modal-body"></div> -->
</div>
