<div id="<%= 'modalupdate' + type.to_s+ faq.id.to_s %>" class='modal fade in' data-keyboard="false" data-backdrop="static" tabindex="-1" style="display: none;">

  <div>
    <div class="divinline">
      <h3>Update <%= type.capitalize %></h3>
    </div>
    <div class="divinline floatright modal-close-button">
      <%= link_to 'Close', '#modalupdate' + type.to_s+ faq.id.to_s, class: 'btn btn-primary button-greenhaze btn-sm btn-modal-close' %>
    </div>
  </div>

  <%= form_for(category) do |f| %>
      <%= f.hidden_field :id %>
      <%= f.fields_for :faqs, faq do |faq| %>
        <div>
<!--           <%= faq.label type %><br />
 -->          <%= faq.text_area type %>
        </div>
      <% end %>


    <div class='floatright modal-submit-button'>
      <%= f.submit 'Submit', class: 'btn btn-primary button-greenhaze' %>
    </div>
  <% end %>
</div>
