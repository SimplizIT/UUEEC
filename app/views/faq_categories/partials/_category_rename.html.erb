<div id="<%= 'modalrename' + category.name %>" class='modal fade in' data-keyboard="false" data-backdrop="static" tabindex="-1" style="display: none;">

  <div>
    <div class='divinline'>
      <h3>Rename FAQ Category</h3>
    </div>
    <div class='divinline floatright'>
      <%= link_to 'Close', '#modalrename' + category.name, class: 'btn btn-primary button-blue btn-sm btn-modal-close' %>
    </div>
  </div>

  <%= form_for(category) do |f| %>
      <%= f.hidden_field :id %>
    <div>
      Category Name: <%= f.label :name %><br />
      <%= f.text_area :name %>
    </div>
    <div class='floatright modal-submit-button'>
      <%= f.submit 'Submit', class: 'btn btn-primary button-blue' %>
    </div>
  <% end %>
</div>