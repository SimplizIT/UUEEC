<div id="<%= 'modalmovefaq' + faq.id.to_s %>" class='modal fade in' data-keyboard="false" data-backdrop="static" tabindex="-1" style="display: none;">

  <div>
    <h3>Rename FAQ Category</h3>
    <%= link_to 'Close', '#modalmovefaq' + faq.id.to_s, class: 'btn btn-primary btn-sm btn-modal-close' %>
  </div>

  <%= form_for(category) do |f| %>
      <%= f.select :id, FaqCategory.all.collect { |p| [ p.name, p.id] }, { include_blank: true, default: nil }, class: 'selectpicker', data: {style: 'btn-inverse', title: 'Relationship to You'} %><br>
      <%= hidden_field_tag :faq_move, faq.id %>


    <div>
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

