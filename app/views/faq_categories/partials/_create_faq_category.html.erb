<div id="create_faq_category_modal" class='modal fade in' data-keyboard="false" data-backdrop="static" tabindex="-1" style="display: none;">

  <div>
    <div class='divinline'>
      <h3>Create a FAQ Category</h3>
    </div>
    <div class='divinline floatright modal-close-button'>
      <%= link_to 'Close', '#create_faq_category_modal', class: 'btn btn-primary button-greenhaze btn-sm btn-modal-close' %>
    </div>
  </div>

  <%= form_for(@faq_category) do |f| %>
    <div>
      <%= f.label :name %><br />
      <%= f.text_area :name %>
    </div>
    <div class='floatright modal-submit-button'>
      <%= f.submit 'Submit', class: 'btn btn-primary button-greenhaze' %>
    </div>
  <% end %>
</div>