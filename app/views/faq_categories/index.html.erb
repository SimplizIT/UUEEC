<body id='faqs' class='navbar-help'>
  <div class='pagewrapper'>
    <div id='faqstables'>

      <% if can? :manage, @faq_category %>
        <%= render partial: 'faq_categories/partials/view_faq' %>
        <%= link_to 'Create FAQ Category', '#create_faq_category_modal', class: 'btn btn-primary btn-modal-open' %>
        <%= render partial: 'faq_categories/partials/create_faq_category' %>
      <% end %>  

      <% if @faq_categories %>
      <br>
        <div class='faq-left-nav divinline'>
          <ul class="nav nav-pills nav-stacked divinline tabbed" role='tablist'>
            <% @faq_categories.each do |category| %>
              <% tabactivation = category.name == @tab_session ? 'active' : '' %> 
              <li class="<%= tabactivation %>">
                <a href="<%= '#' + category.name %>" role='tab'><%= category.name.humanize %></a>
                <%= button_to "Delete Category", faq_category_path(id: category.id, faq_category: {id: category.id, _destroy: '1' }), method: 'delete',  id: 'deleteFAQ', class: 'btn btn-primary btn-usergray user_image_button btn-sm' %>
              </li>
            <% end %>
          </ul> 
        </div>               
        
        <div class='faq-right-nav divinline tab-content'>
          <% @faq_categories.each_with_index do |category, index| %>
            <% tabactivation = category.name == @tab_session ? 'in active' : '' %> 
            <div class="tab-pane fade <%= tabactivation %>" id="<%= category.name %>">
              <% if can? :manage, @faq_category %>
                <%= link_to 'Create FAQ', '#modal' + category.name, class: 'btn btn-primary btn-modal-open' %>
                <%= render partial: 'faq_categories/partials/category', locals: { category: category } %>
              <% end %>
              <table class="table table-striped table-hover tablesorter">
                <tbody class='role_table_body'>
                  <% category.faqs.each do |faq| %>
                    <% if !faq.new_record? %>
                      <tr class='question-row'>
                        <td><strong>Q: <span hidden><%= faq.id %></span></strong></td>
                        <td><%= faq.question %></td>
                        <td><%= button_to "Delete FAQ", faq_category_path(id: category.id, tab: category.name, faq_category: { id: category.id, faqs_attributes: { id: faq.id, _destroy: '1' }}), method: 'delete',  id: 'deleteFAQ', class: 'btn btn-primary btn-usergray user_image_button btn-sm' %></td>
                      </tr>
                      <tr class='answer-row' hidden>
                        <td>a: </td>
                        <td><%= faq.answer %></td>
                        <td></td>
                      </tr>
                    <% end %>
                  <% end %>  
                </tbody>
              </table> 
            </div>

          <% end %>  
        </div>             
      <% end %>
    </div>
  </div>
</body>


























  