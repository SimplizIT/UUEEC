<body id='faqs' class='navbar-help'>
  <div id='faqswrapper'>
    <div id='faqstables'>

      <% if can? :manage, @faq_category %>
        <%= render partial: 'faq_categories/partials/view_faq' %>
        <%= link_to 'Create FAQ Category', '#create_faq_category_modal', class: 'btn btn-primary btn-modal-open' %>
        <%= render partial: 'faq_categories/partials/create_faq_category' %>
      <% end %>  

      <% if @faq_categories %>
        <ul class="nav nav-pills nav-stacked divinline tabbed">
          <% counter = 1 %>
          <% @faq_categories.each do |category| %>
            <% tabactivation = counter == 1 ? 'active' : '' %> 
            <li class="<%= tabactivation %>">
              <a href="<%= '#tab' + category.id.to_s %>" role='tab' data-toggle='tab'><%= category.name.humanize %></a>
            </li><br>
            <% counter += 1 %>
          <% end %>
        </ul>                
        
        <% @faq_categories.each_with_index do |category, index| %>
          <% tabactivation = index == 0 ? 'active' : '' %> 
          <div class="tab-pane fade <%= tabactivation %>" id="<%= 'tab' + category.id.to_s %>">
            <% if can? :manage, @faq_category %>
              <%= link_to 'Create FAQ', '#modal' + category.id.to_s, class: 'btn btn-primary btn-modal-open' %>
              <%= render partial: 'faq_categories/partials/category', locals: { category: category } %>
            <% end %>
            <table class="table table-striped table-hover tablesorter">
              <tbody class='role_table_body'>
                <% category.faqs.each do |faq| %>
                  <tr class='question-row'>
                    <td><strong>Q: <span hidden><%= faq.id %></span></strong></td>
                    <td><%= faq.question %></td>
                    <td><%= button_to "Delete FAQ", faq_categories_path(faq), method: 'delete',  id: 'deleteFAQ', class: 'btn btn-primary btn-usergray user_image_button btn-sm' %></td>
                  </tr>
                  <tr class='answer-row' hidden>
                    <td>a: </td>
                    <td><%= faq.answer %></td>
                    <td></td>
                  </tr>
                <% end %>  
              </tbody>
            </table> 
          </div>
                      <% counter += 1 %>

        <% end %>               
      <% end %>
    </div>
  </div>
</body>


























  