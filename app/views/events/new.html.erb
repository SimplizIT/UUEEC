 <%= link_to 'Home page', root_path %><br><br>
  <%= link_to 'Events page', events_path %><br><br>

<div id='eventForm'>
  <%= form_for(@event) do |f| %>
    <div>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
      <%= f.check_box :allDay %>
      <%= f.label :allDay %><br />
    </div>

    <div class='datetimepickerevent input-append date'>
      <%= f.label :start %><br />
      <%= f.text_field :start, data: { format: 'dd-MM-yyyy hh:mm:ss' } %>
      <span class='add-on divinline'>
        <i data-time-icon="fa fa-clock-o" data-date-icon="fa fa-calendar"></i>
      </span>
    </div>

    <div class='datetimepickerevent input-append date'>
      <%= f.label :end %>
      <%= f.text_field :end, data: { format: "dd-MM-yyyy hh:mm:ss"} %>
      <span class='add-on divinline'>
        <i data-time-icon="fa fa-clock-o" data-date-icon="fa fa-calendar"></i>
      </span>
    </div>

    <div>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>

    <div>
      <%= f.submit 'Submit', class: 'btn btn-primary'  %>
    </div>
  <% end %>
</div>
