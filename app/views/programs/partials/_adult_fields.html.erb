<div class='add_person'>
  <div class='each_adult'>
    <hr />
    <div class='divinline'>
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name, pattern: '^[a-zA-Z]+$', maxlength: '30', placeholder: 'First Name' %>
    </div>
    <div class='divinline'>
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name, pattern: '^[a-zA-Z]+$', maxlength: '30', placeholder: 'Last Name' %>
    </div>

    <div class='divinline'>
      <%= f.label :birthdate %><br>
      <div class='input-append date child_birthdate' data-date-format="dd-mm-yyyy">
        <div class='divinline'>
          <%= f.text_field :birthdate, readonly: true, class: 'divinline', pattern: '^[a-zA-Z]+$', maxlength: '30', placeholder: 'Birthdate' %>
        </div>
        <div class='divinline input-button'>
          <span class="add-on"><i class="icon-th fa fa-calendar"></i></span>
        </div>
        <div class='divinline input-button'>
          <span class="add-on"><i class="icon-remove fa fa-times-circle-o"></i></span>
        </div>
      </div>
    </div>
    <div class='divinline program-select'>
      <%= f.label :relationship %><br>
      <% adult_relationship = f.object.relationship.capitalize ? f.object.relationship.capitalize : nil %>
      <%= f.select :relationship, select_relationship, { include_blank: true, default: adult_relationship }, class: 'selectpicker relationship', data: {style: 'btn-inverse', title: 'Relationship to You'} %><br>
    </div>
    <div class='divinline destroy_person'>
      <%= f.hidden_field :_destroy %>
    </div>
  </div>
</div>