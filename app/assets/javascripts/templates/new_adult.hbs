<div id='add_adult' class='add_adult'>
  <div class='each_adult'>
    <hr />
    <div class='divinline'>
      <label>First Name</label><br>
      <input type='text' name='adult_container[][:first_name]' pattern='^[a-zA-Z]+$', maxlength='30', placeholder='First Name'>
    </div>
    <div class='divinline'>
      <label>Last Name</label><br>
      <input type='text' name='adult_container[][:last_name]' pattern='^[a-zA-Z]+$', maxlength='30', placeholder='Last Name' >
    </div>

    

    

     <div class='divinline'>
      <label>Birthdate</label><br>
      <div id='adult_birthdate' class='input-append date adult_birthdate' data-date-format="dd-mm-yyyy">
        <div class='divinline'>
          <input type='text' name='adult_container[][:birthdate]' readonly='true' class='divinline' pattern='^[a-zA-Z]+$' maxlength='30' placeholder='Birthdate' >
        </div>
        <div class='divinline input-button'>
          <span class="add-on"><i class="icon-th fa fa-calendar"></i></span>
        </div>
        <div class='divinline input-button'>
          <span class="add-on"><i class="icon-remove fa fa-times-circle-o"></i></span>
        </div>
      </div>
    </div><br>

    <div class='divinline'>
      <label>Primary Phone</label><br>
      <input type='text' name='adult_container[][:primary_phone]' pattern='^\d{3}-\d{3}-\d{4}$' maxlength='12' placeholder='Primary Phone' class='phone-input phone'>
    </div>

    <div class='divinline program-select'>
      <label>Relationship</label><br>
      <select name='adult_container[][:relationship]' class='selectpicker' data-title="Relationship to You" data-style="btn-inverse">
        <option value=""></option>
        <option value='Aunt'>Aunt</option>
        <option value='Brother'>Brother</option>
        <option value='Daughter'>Daughter</option>
        <option value='Friend'>Friend</option>
        <option value='Grandparent'>Grandparent</option>
        <option value='Husband'>Husband</option>
        <option value='Significant Other'>Significant Other</option>
        <option value='Sister'>Sister</option>
        <option value='Son'>Son</option>
        <option value='Uncle'>Uncle</option>
        <option value='Wife'>Wife</option>
      </select>
    </div><br>

    <div class='divinline'>
      <p><strong>Is this person allowed to pick up your child?</strong></p>
      <div class='divinline radio'>
        <input id='pickup_allowed_yes' type='radio' name='adult_container[][:pickup]' value='true' checked>
        <label for='pickup_allowed_yes'>Yes</label>
        <input id='pickup_allowed_no' type='radio' name='adult_container[][:pickup]' value='false'>
        <label for='pickup_allowed_no'>No</label>
      </div>
    </div>
  </div>
</div>

